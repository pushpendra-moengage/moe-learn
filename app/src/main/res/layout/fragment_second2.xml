<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.home.fragments.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_jump_to_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jump to Third Fragment"/>

        <Button
            android:id="@+id/btn_start_geo"
            android:layout_width="match_parent"
            android:text="Start Geo"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_stop_geo"
            android:layout_width="match_parent"
            android:text="End Geo"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>